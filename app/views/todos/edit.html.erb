<div class="w-full max-w-2xl mx-auto p-6 bg-white shadow-lg rounded-lg">
  <% content_for :title, "Editing todo" %>

  <div class="md:w-2/3 w-full">
    <h1 class="font-bold text-4xl mb-4">Editing todo</h1>

    <%= render "form", todo: @todo %>

    <div class="flex items-center gap-4 mt-6">
      <%= link_to "Show this todo", @todo, class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium shadow-sm transition-all" %>
      <%= link_to "Back to todos", todos_path, class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium shadow-sm transition-all" %>
    </div>
  </div>
</div>

